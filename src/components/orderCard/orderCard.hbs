<div class="order-card">
    <div class="left-content">
        {{#if this.image}}
            <img class='img' src='{{this.image.url}}' />
        {{else}}
            <div class="img"></div>
        {{/if}}
    </div>
    <div class="center-content">
        <div class="product-price">
            <span class="text-subheader">{{this.product.price}} ₽ за 1 шт.</span>
        </div>
        <div class="badjes">

        </div>
        <div class="product-title">
            <span class="text-regular">{{this.product.title}}</span>
        </div>
        <div id="likeBtn"></div>
    </div>
    <div class="right-content">
        <div class="counter"></div>
        <div id="deleteBtn"></div>
    </div>
</div>