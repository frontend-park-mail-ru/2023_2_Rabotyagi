<div class="content">
    <div class="header">
        <span class="text-subheader title">{{this.title}}</span>
    </div>
    <div class="body">
        <img class="image" src="{{this.image}}" alt="" srcset="">
        <div class="info">
            <span class="text-regular">Город</span>
            <span class="text-regular">{{this.city}}</span>
            <span class="text-regular">Описание</span>
            <span class="text-regular">{{this.description}}</span>
            <span class="text-regular">Категория</span>
            <span class="text-regular">{{this.category.name}}</span>
            <span class="text-regular">Размещено</span>
            <span class="text-regular">{{this.created_at}}</span>
        </div>
    </div>
</div>