<div id="{{this.id}}" class="dropdown-container hidden">
    {{#if this.search}}
        <div class="dropdown-search">
            {{{this.searchIcon}}}
            <input class='search-input' placeholder='Поиск'>
        </div>
    {{/if}}
    <div class="dropdown-content">
        {{#each this.items}}
            <button id="{{this.[0]}}" class="dropdown-btn">{{this.[1]}}</button>
        {{/each}}
    </div>
</div>